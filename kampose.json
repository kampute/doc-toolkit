{
    "convention": "dotnet",
    "outputDirectory": ".site",
    "audit": {
        "options": [
            "recommended"
        ],
        "includeImplicitConstructors": true,
        "stopOnIssues": true
    },
    "assemblies": [
        "src/bin/Release/**/Kampute.DocToolkit.dll"
    ],
    "topics": [
        "docs/**/*.md"
    ],
    "assets": [
        {
            "source": [
                "LICENSE",
                "*.png",
                "docs/*.png"
            ]
        }
    ],
    "topicHierarchy": "directory",
    "theme": "classic",
    "themeSettings": {
        "projectName": "Kampute.DocToolkit",
        "projectSlogan": "A toolkit for generating custom .NET API documentation",
        "projectLogoLightUri": "logo-dark.png",
        "projectLogoDarkUri": "logo-light.png",
        "faviconUri": "ICON.png",
        "pageFooter": "- Copyright Â© {{now 'yyyy'}} [Kampute](https://kampute.com)\n- Site built with [Kampose](https://kampute.github.io/kampose/).",
        "groupTypesByNamespace": true,
        "showTypeMembersSummary": true,
        "seeAlsoSubtopics": true,
        "menuItems": [
          "*"
        ]
    }
}