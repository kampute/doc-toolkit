{
    "convention": "docfx",
    "outputDirectory": ".site",
    "audit": {
        "options": [
            "recommended"
        ],
        "includeImplicitConstructors": true,
        "stopOnIssues": true
    },
    "assemblies": [
        "src/bin/Release/netstandard2.1/Kampute.DocToolkit.dll"
    ],
    "topics": [
        "docs/**/*.md"
    ],
    "assets": [
        {
            "source": [
                "LICENSE",
                "*.png",
                "docs/*.png"
            ]
        }
    ],
    "theme": "classic",
    "themeSettings": {
        "projectName": "Kampute.DocToolkit",
        "projectSlogan": "A toolkit for generating custom .NET API documentation",
        "projectLogoLightUri": "logo-dark.png",
        "projectLogoDarkUri": "logo-light.png",
        "faviconUri": "ICON.png",
        "pageFooter": "Copyright Â© {{now 'yyyy'}} [Kampute](https://kampute.com/)",
        "groupTypesByNamespace": true,
        "seeAlsoSubtopics": true
    }
}